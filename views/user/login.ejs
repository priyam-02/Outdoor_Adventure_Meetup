<%- include('../partials/header.ejs') %>
    <div class="hero-section3">
        <div class="content" style="padding-bottom: 3rem;">
            <h1>Login</h1>
        <form action = '/users/login' method = 'POST' class="form">
                <div style="padding-top: 40px;" class="form-group" >
                    <label style="font-size: 22px; text-shadow: black 4px 4px 8px; background-color: rgba(0, 0, 0, 0);" for="email">Email:</label>
                    <input style="width: 300px;" type="email" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label style="font-size: 22px; text-shadow: black 4px 4px 8px; background-color: rgba(0, 0, 0, 0);" for="password">Password:</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <div style="padding-bottom: 40px;" class="form-group">
                    <a style="font-size: 16px; color: white; font-weight: bold; text-shadow: black 4px 4px 8px; background-color: rgba(0, 0, 0, 0);" href="/users/new">Don't have an account? Sign up here</a>
                </div>
                <button style="background-color: #CC5500; font-size: 18px; color: white; font-weight: bold; width: 150px;" type="submit">Login</button>
            </form>
        </div>
    </div>
    <%- include('../partials/footer.ejs') %> 
